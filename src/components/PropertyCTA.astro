---

export interface Props {
  labels: {
    ctaLabel?: string;
    ctaHeading?: string;
    ctaDescription?: string;
    ctaPrimaryButton?: string;
    ctaSecondaryButton?: string;
  };
  propertyTitle?: string;
}

const { labels, propertyTitle = '' } = Astro.props;
---

<section class="py-16 md:py-24 bg-primary text-primary-foreground" data-dr-section="property-detail-labels">
  <div class="max-w-3xl mx-auto px-6 md:px-12 text-center">
    <p class="text-[11px] uppercase tracking-[0.4em] text-primary-foreground/40 font-light mb-4" data-dr-field="ctaLabel">
      {labels.ctaLabel ?? 'Interested?'}
    </p>
    <h2 class="text-2xl md:text-4xl font-serif tracking-wide mb-4" data-dr-field="ctaHeading">
      {labels.ctaHeading ?? 'Schedule a Private Viewing'}
    </h2>
    <p class="text-primary-foreground/60 font-light mb-8 text-sm md:text-base" data-dr-field="ctaDescription">
      {labels.ctaDescription ?? `Experience ${propertyTitle} in person. Our team will arrange an exclusive tour at your convenience.`}
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="/#contact-form"
        class="inline-block px-8 py-3 bg-surface text-primary text-sm uppercase tracking-[0.2em] font-light hover:bg-background transition-colors duration-300"
      >
        <span data-dr-field="ctaPrimaryButton">{labels.ctaPrimaryButton ?? 'Request Viewing'}</span>
      </a>
      <a
        href="/#properties"
        class="inline-block px-8 py-3 border border-white/20 text-primary-foreground text-sm uppercase tracking-[0.2em] font-light hover:bg-surface/10 transition-colors duration-300"
      >
        <span data-dr-field="ctaSecondaryButton">{labels.ctaSecondaryButton ?? 'View All Properties'}</span>
      </a>
    </div>
  </div>
</section>
